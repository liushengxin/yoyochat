<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:background="@drawable/group_dialog_bg">

            <LinearLayout
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:padding="@+dimen/group_dialog_layout_pad"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search"
                    android:textColor="#fff"
                    android:padding="@+dimen/group_dialog_text_pad"
                    android:drawableLeft="@drawable/mm_title_btn_compose_normal"
                    android:textSize="@dimen/group_dialog_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/create"
                android:padding="@+dimen/group_dialog_layout_pad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create"
                    android:textColor="#fff"
                    android:padding="@dimen/group_dialog_text_pad"
                    android:drawableLeft="@drawable/mm_title_btn_qrcode_normal"
                    android:textSize="@dimen/group_dialog_text" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>